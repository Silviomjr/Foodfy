{% extends "admin/layout.njk" %}

{% block content %}
    <div class="admin-display">
        <div class="show-header">
            <h2>Gerenciar Chefs</h2>
        </div>
        
        <div class="admin-cards-chefs">
            {% for chef in chefs %}
                <div class="admin-card">
                    <div>
                        <img src="{{chef.avatar_url}}" alt="{{ chef.name }} image" class="admin-chef-img">
                    </div>
                    <div class="admin-card-content">
                        <h3>{{ chef.name }}</h3>
                        <div>
                            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}