<div class="form-item">
    <div class="form-item-title">
        <p>Nome da receita</p>
    </div>
    <div class="form-item-field">
        <input 
            type="text"
            name="title"
            placeholder="Nome da receita"
            value="{{recipe.title}}">
    </div>
</div>

<div class="form-item">
    <div class="form-item-title">
        <p>Imagem da receita</p>
    </div>
    <div class="form-item-field">
        <input 
            type="url"
            name="image"
            placeholder="https://"
            value="{{recipe.image}}">
    </div>
</div>

<div class="form-item">
    <div class="form-item-title">
        <p>Chef</p>
    </div>
    <div class="form-item-field">
        <select name="chef_id">
            {% for chef in chefs %}
                <option value="{{chef.id}}"
                {% if recipe.chef_id == chef.id %}
                    selected
                {% endif %}
                >
                    {{chef.name}}
                </option>
            {% endfor %}
        </select>
    </div>
</div>


<div class="form-item">
    <div class="form-item-title">
        <p>Ingredientes</p>
    </div>
    {% for ingredient in recipe.ingredients %}
        <div id="ingredients">
            <div class="form-item-field ingredient">
                    <input 
                        type="text"
                        name="ingredients[]"
                        placeholder="Insira seu ingrediente"
                        value="{{ingredient}}">
            </div>
        </div>
    {% else %}
        <div id="ingredients">
            <div class="form-item-field ingredient">
                <input 
                    type="text"
                    name="ingredients[]"
                    placeholder="Insira seu ingrediente"
                    >
            </div>
        </div>
    {% endfor %}
    
    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</div>

<div class="form-item">
    <div class="form-item-title">
        <p>Modo de preparo</p>
    </div>

        {% for step in recipe.preparation %}
            <div id="preparation-steps">
                <div class="form-item-field step">
                        <input 
                            type="text"
                            name="preparation[]"
                            placeholder="Insira o passo de preparo"
                            value="{{step}}">
                </div>
            </div>
        {% else %}
            <div id="preparation-steps">
                <div class="form-item-field step">
                        <input 
                            type="text"
                            name="preparation[]"
                            placeholder="Insira o passo de preparo"
                            >
                </div>
            </div>
        {% endfor %}
    
    <button type="button" class="add-step">Adicionar novo passo</button>
</div>

<div class="form-item">
    <div class="form-item-title">
        <p>Informações adicionais</p>
    </div>
    <div class="form-item-field">
        <textarea 
            name="information"
            placeholder=""
            rows="10"
            form="create-form"
            >{{ recipe.information }}</textarea>
    </div>
    
</div>
