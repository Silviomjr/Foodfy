<div class="form-item">
    <div class="form-item-title">
        <p>Nome do autor</p>
    </div>
    <div class="form-item-field">
        <input 
            type="text"
            name="author"
            placeholder="Insira seu nome"
            value="{{fields.author}}">
    </div>
</div>

<div class="form-item">
    <div class="form-item-title">
        <p>Nome da receita</p>
    </div>
    <div class="form-item-field">
        <input 
            type="text"
            name="title"
            placeholder="Nome da receita"
            value="{{fields.title}}">
    </div>
</div>

<div class="form-item">
    <div class="form-item-title">
        <p>Imagem da receita</p>
    </div>
    <div class="form-item-field">
        <input 
            type="url"
            name="image"
            placeholder="https://"
            value="{{fields.image}}">
    </div>
</div>

<div class="form-item">
    <div class="form-item-title">
        <p>Ingredientes</p>
    </div>
    {% for ingredient in fields.ingredients %}
        <div id="ingredients">
            <div class="form-item-field ingredient">
                <input 
                    type="text"
                    name="ingredients[]"
                    placeholder="Insira seu ingrediente"
                    value="{{ingredient}}">
            </div>
        </div>
    {% else %}
        <div id="ingredients">
            <div class="form-item-field ingredient">
                <input 
                    type="text"
                    name="ingredients[]"
                    placeholder="Insira seu ingrediente"
                    >
            </div>
        </div>
    {% endfor %}
    
    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</div>

<div class="form-item">
    <div class="form-item-title">
        <p>Modo de preparo</p>
    </div>

        {% for step in fields.preparation %}
            <div id="preparation-steps">
                <div class="form-item-field step">
                        <input 
                            type="text"
                            name="preparation[]"
                            placeholder="Insira o passo de preparo"
                            value="{{step}}">
                </div>
            </div>
        {% else %}
            <div id="preparation-steps">
                <div class="form-item-field step">
                        <input 
                            type="text"
                            name="preparation[]"
                            placeholder="Insira o passo de preparo"
                            >
                </div>
            </div>
        {% endfor %}
    
    <button type="button" class="add-step">Adicionar novo passo</button>
</div>

<div class="form-item">
    <div class="form-item-title">
        <p>Informações adicionais</p>
    </div>
    <div class="form-item-field">
        <textarea 
            name="information"
            placeholder=""
            rows="10"
            form="create-form"
            >{{ fields.information }}</textarea>
    </div>
    
</div>
